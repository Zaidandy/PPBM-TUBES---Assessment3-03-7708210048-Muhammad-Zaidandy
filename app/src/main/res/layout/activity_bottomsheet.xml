<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomsheet"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardBackgroundColor="@color/cream"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/A_crd_1"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/akustik_guitar_ekspert"
            >

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/A_crd_1"
        android:text="Gitar adalah alat musik senar dengan enam senar yang dimainkan dengan cara dipetik. Digunakan dalam berbagai genre musik seperti rock, pop, jazz, dan blues. Pemainnya, gitaris, memetik senar menggunakan jari-jari atau plektrum untuk menghasilkan suara. Gitar memiliki berbagai jenis, termasuk klasik, akustik, dan listrik."
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:id="@+id/A_txt_1"/>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/A_back1"
        android:layout_below="@id/A_txt_1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/hijau"
        android:text="BACK"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        />

</RelativeLayout>